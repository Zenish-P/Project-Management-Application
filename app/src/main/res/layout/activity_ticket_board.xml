<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="openProjectStat">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/lanePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/projectStat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="-56dp"
            android:layout_marginBottom="-60dp"
            android:backgroundTint="@color/primaryVariant"
            android:clickable="true"
            android:contentDescription="View Project Stat"
            android:onClick="openProjectStat"
            app:borderWidth="0dp"
            app:srcCompat="@android:drawable/ic_dialog_dialer"
            tools:srcCompat="@android:drawable/ic_dialog_dialer" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addNewProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/primaryVariant"
            android:clickable="true"
            android:contentDescription="Add a Ticket"
            android:onClick="openNewTicket"
            app:borderWidth="0dp"
            app:srcCompat="@drawable/ic_baseline_add_white" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>